package com.StudentManagement.Service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.StudentManagement.Beans.StudentDto;
import com.StudentManagement.DAO.StudentDAO;
import com.StudentManagement.Entities.StudentEntity;

//In this service Layer will write the Business Logic
@Service
public class StudentServiceImpl implements StudentService {
	@Autowired
	StudentDAO studentDao;

	public List<StudentEntity> showstudentlist() {
		
		return studentDao.showstudentlist();
	}

	public int addStudent(StudentDto student) {
		
//		Will adding the student will send Email to Student..--> this is our Business Logic --> we will implement here only when Student Country is "UK"
		if(student.getStdcountry().equalsIgnoreCase("UK")) {
			System.out.println("Email Sent to the Student...");
		}
		
		return studentDao.addStudent(student);
	}

}
